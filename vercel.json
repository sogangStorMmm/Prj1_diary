{
    "version": 2,
    "builds": [
        {
            "src": "exchange-diary-backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.css",
            "use": "@vercel/static"
        },
        {
            "src": "*.js",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "exchange-diary-backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}